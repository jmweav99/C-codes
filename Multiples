#include <stdio.h> 
 
int main(){ 
 int a; 
 //asks users input 
 printf("Enter integer: "); 
 scanf("%d", &a); 
 //determining if input is postive 
 if(a>0){ 
  printf("The integer is postive.\n"); 
  //If and else-if to see if it's a multiple of 2 or 5 if not then printf 
  if(a%2==0){ 
   printf("The integer is a multiple of 2"); 
  } 
  else if(a%5==0){ 
   printf("The integer is a multiple of 5"); 
  } 
  else printf("The integer %d doesn't meet any criteria.", a); 
 } 
 //testing to see if the input is negative 
 if(a<0){ 
  printf("The integer is negative.\n"); 
  if(a%2==0){ 
   printf("The integer is a multiple of 2"); 
  } 
  else if(a%5==0){ 
   printf("The integer is a multiple of 5"); 
  } 
  else printf("The integer %d doesn't meet any criteria.", a); 
 } 
 return 0; 
} 
